#### COLOUR

# default statusbar colors
set-option -g status-bg colour235
set-option -g status-fg colour246
set-option -g status-attr default

# default window title colors
set-window-option -g window-status-fg colour246
set-window-option -g window-status-bg default
set-window-option -g window-status-attr dim

# active window title colors
set-window-option -g window-status-current-fg colour154
set-window-option -g window-status-current-bg default
set-window-option -g window-status-current-attr bright

# pane border
set-option -g pane-border-fg colour242
set-option -g pane-active-border-fg colour246

# message text
set-option -g message-bg colour235
set-option -g message-fg colour154

# pane number display
set-option -g display-panes-active-colour colour33
set-option -g display-panes-colour colour154

# clock
set-window-option -g clock-mode-colour colour154

